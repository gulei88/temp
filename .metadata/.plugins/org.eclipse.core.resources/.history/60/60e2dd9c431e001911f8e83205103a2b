	/**
	 * 	将部门信息打印到excel文件
	 * @param evt
	 */
	private void button7ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		//将选择目录加上.xls并转换为字符串型，以便接下来使用
		String t=fileseletion.exportselect().toString()+".xls";
		File file=new File(t);//新建文件
		String[] header={"部门编号","部门名称"};
		String d_id=null;
		String string="";
		//查找所有部门数据并存储到部门列表中
		ArrayList<model.department> departments =departmentaccess.getDepartments(d_id);
		if (t == null) {
			return;
		}
		if (file.exists()) {
			int overwriteSelect = JOptionPane.showConfirmDialog(this,
					"<html><div style='color:red;border:2px;'><font size=3>文件" + file.getName()
							+ "已存在，是否覆盖?</font></div><html>", "是否覆盖?",
					JOptionPane.YES_NO_OPTION, JOptionPane.WARNING_MESSAGE);
		}else {
			
		List<String> exception = printObiectExcel.printExcel(departments, header, t);
		if (exception.size()!=0) {
			
			for (int i = 0; i < exception.size(); i++) {
				string+=exception.get(i)+"\n";
			}
			JOptionPane.showMessageDialog(this, string,"错误信息",JOptionPane.ERROR_MESSAGE);
		} else {
			JOptionPane.showMessageDialog(this, "导出成功", "提示信息", JOptionPane.INFORMATION_MESSAGE);
		}
		}
	}

	private void button3ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
		int row = jTable1.getSelectedRow();
		String d_name = textField2.getText();
		String d_id = (String) jTable1.getValueAt(row, 0);
		int re = departmentaccess.update(d_id, d_name);
		if (re > 0) {
			JOptionPane.showMessageDialog(this, "修改成功");
		}
		tableModel.setValueAt(d_name, row, 1);
	}

	private void button4ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		this.dispose();
	}

	private void button2ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
		int row = jTable1.getSelectedRow();
		String d_id = (String) jTable1.getValueAt(row, 0);
		try {
			int re = departmentaccess.delect(d_id);
			if (re > 0) {
				JOptionPane.showMessageDialog(this, "删除成功");
				tableModel.removeRow(row);
			} else
				JOptionPane.showMessageDialog(this, "修改失败，请联系管理员");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {
		// TODO add your handling code here:
		int row = jTable1.getSelectedRow();
		textField1.setText((String) jTable1.getValueAt(row, 0));
		textField2.setText((String) jTable1.getValueAt(row, 1));
	}

	private void button1ActionPerformed(java.awt.event.ActionEvent evt) {
		// TODO add your handling code here:
		DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
		String d_name = textField2.getText();
		String td_id = null;
		if (jTable1.getRowCount() < 1) {
			d_str = "01";
		} else {
			td_id = (String) jTable1.getValueAt(jTable1.getRowCount() - 1, 0);
			int t = Integer.valueOf(td_id) + 1;
			td_id = String.valueOf(t);
			if (td_id.length() < 2) {
				td_id = "0" + td_id;
			}
		}
		int re = 0;
		try {
			re = departmentaccess.insert(td_id, d_name);
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		if (re > 0) {
			JOptionPane.showMessageDialog(this, "添加成功");
			Vector<String> dVector = new Vector<String>();
			dVector.add(td_id);
			dVector.add(d_name);
			tableModel.addRow(dVector);
		} else {
			JOptionPane.showMessageDialog(this, "添加失败请联系管理员");
		}
	}

	public void setColumn() {
		TableColumn column;
		column = jTable1.getColumnModel().getColumn(0);
		column.setPreferredWidth(50);
		column = jTable1.getColumnModel().getColumn(1);
		column.setPreferredWidth(250);
	}

	public void departmentprint() {
		String d_id = null;
		DefaultTableModel tableModel = (DefaultTableModel) jTable1.getModel();
		tableModel.setRowCount(0);
		ArrayList<model.department> d_list = departmentaccess
				.getDepartments(d_id);

		for (int i = 0; i < d_list.size() - 1; i++) {
			for (int j = 0; j < d_list.size() - 1; j++) {

				int d_id1, d_id2;
				d_id1 = Integer.valueOf(d_list.get(j).getD_id());
				d_id2 = Integer.valueOf(d_list.get(j + 1).getD_id());
				if (d_id1 > d_id2) {
					Collections.swap(d_list, j, j + 1);
				}
			}
		}
		for (int i = 0; i < d_list.size(); i++) {
			String d_name;
			d_id = d_list.get(i).getD_id();
			d_name = d_list.get(i).getD_name();
			Vector<String> dVector = new Vector<String>();
			dVector.add(d_id);
			dVector.add(d_name);
			tableModel.addRow(dVector);
		}
	}

